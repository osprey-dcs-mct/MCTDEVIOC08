record(calc, "$(P)X_CENTRE") {
    field(DESC, "Calculated centre")
    field(INPA, "MCTSLT03MOT01.RBV CPP")
    field(INPB, "MCTSLT03MOT02.RBV CPP")
    field(CALC, "(A+B)/2")
}

record(ai, "$(P)X_CENTRE_TARGET1") {
    field(DESC, "Tgt centre")
    field(VAL,  "0.0")

    info(autosaveFields, "VAL")
}

record(calc, "$(P)X_CENTRE_STATUS1"){
    field(DESC, "Status")
    field(INPA, "$(P)X_CENTRE CP")
    field(INPB, "$(P)X_CENTRE_TARGET1 CP")
    field(INPC, "0.1")
    field(CALC, "ABS(A-B)<C")
}

record(calcout, "$(P)X_CENTRE_CALC"){
    field(DESC, "Push calculation to status PV")
    field(PINI, "YES")
    field(INPC, "$(P)X_CENTRE_STATUS1 CP")
    field(CALC, "C")
    field(OUT,  "$(P)X_CENTRE_STATUS PP")
}

record(bi, "$(P)X_CENTRE_STATUS") {
    field(DESC, "X centre status based on DMM and VBM")
    field(ZNAM, "Not in pos.")
    field(ZSV,  "MINOR")
    field(ONAM, "In posn.")
    field(OSV,  "NO_ALARM")
}
