record(ai, "$(P)VSIZE_TARGET1") {
    field(DESC, "Tgt gap when VBM out")
    field(VAL,  "32.0")

    info(autosaveFields, "VAL")
}

record(calc, "$(P)VSIZE_STATUS1"){
    field(DESC, "Status if VBM out")
    field(INPA, "$(P)VSIZE CP")
    field(INPB, "$(P)VSIZE_TARGET1 CP")
    field(INPC, "0.1")
    field(CALC, "A>0&&A<B+C")
}

record(calc, "$(P)VSIZE_STATUS2"){
    field(DESC, "Status when VBM in")
    field(INPA, "$(P)VSIZE CP")
    # SLT02 Z pos
    field(INPB, "$(SLT02Z)")
    # VBM Z pos
    field(INPC, "$(VBMZ)")
    # VBM length
    field(INPD, "1050")
    field(INPE, "MCTVBM01:PITCH.RBV CP")
    field(INPF, "0.001")
    field(INPG, "0.0")
    field(INPH, "(B/C)*D*E*F")
    field(CALC, "A>0&&A<H+G")
}

record(calcout, "$(P)VSIZE_STATUS_CALC"){
    field(DESC, "Select calc based on VBM status")
    #field(INPA, "MCTMONO01:IN_SERVICE CP")
    field(INPB, "MCTVBM01:IN_SERVICE CP")
    field(INPC, "$(P)VSIZE_STATUS1 CP")
    field(INPD, "$(P)VSIZE_STATUS2 CP")
    field(CALC, "B?D:C")
    field(OUT,  "$(P)VSIZE_STATUS PP")
}

record(bi, "$(P)VSIZE_STATUS") {
    field(DESC, "X gap status based on VBM")
    field(ZNAM, "Not in pos.")
    field(ZSV,  "MINOR")
    field(ONAM, "In posn.")
    field(OSV,  "NO_ALARM")
}
