record(calcout, "$(P)IN_POSITION_CALC") {
    field(DESC, "Overall $(DESC) pos. status calc.")
    field(PINI, "YES")
    field(INPA, "$(P)HSIZE_STATUS CPP")
    field(INPB, "$(P)HCENTRE_STATUS CPP")
    field(INPC, "$(P)VSIZE_STATUS CPP")
    field(INPD, "$(P)VCENTRE_STATUS CPP")
    field(CALC, "A&&B&&C&&D")
    field(OUT,  "$(P)IN_POSITION PP")
}

record(bi, "$(P)IN_POSITION") {
    field(DESC, "Overall $(DESC) position status")
    field(ZNAM, "Not at tgt.")
    field(ZSV,  "MINOR")
    field(ONAM, "At target")
}

record(ai, "$(P)IN_POSITION_TOLERANCE") {
    field(DESC, "Allowable tolerance for in-pos calc.")
    field(VAL,  "$(TOLERANCE=0.2)")

    info(autosaveFields, "VAL")
}

record(calcout, "$(P)HCENTRE_STATUS_CALC"){
    field(DESC, "$(DESC) HCENTRE status calc")
    field(PINI, "YES")
    field(INPA, "$(P)HCENTRE_CALC CPP")
    field(INPB, "$(P)HCENTRE.RBV CPP")
    field(INPC, "$(P)IN_POSITION_TOLERANCE CPP")
    field(CALC, "ABS(A-B)<=C")
    field(OUT,  "$(P)HCENTRE_STATUS PP")
}

record(bi, "$(P)HCENTRE_STATUS") {
    field(DESC, "$(DESC) HCENTRE status")
    field(ZNAM, "Not at tgt.")
    field(ZSV,  "MINOR")
    field(ONAM, "At target")
    field(OSV,  "NO_ALARM")
}

