record(ai, "$(P)VSIZE_TARGET1") {
    field(DESC, "Tgt gap when DMM and VBM are out")
    field(VAL,  "10.0")

    info(autosaveFields, "VAL")
}

record(calc, "$(P)VSIZE_STATUS1"){
    field(DESC, "Status if DMM and VBM are out")
    field(INPA, "$(P)VSIZE CP")
    field(INPB, "$(P)VSIZE_TARGET1 CP")
    field(INPC, "0.1")
    field(CALC, "A>0&&A<B+C")
}

record(ai, "$(P)VSIZE_TARGET2") {
    field(DESC, "Tgt gap when DMM is in")
    field(VAL,  "5.0")

    info(autosaveFields, "VAL")
}

record(calc, "$(P)VSIZE_STATUS2"){
    field(DESC, "Status if DMM is in")
    field(INPA, "$(P)VSIZE CP")
    field(INPB, "$(P)VSIZE_TARGET2 CP")
    field(INPC, "0.1")
    field(CALC, "A>0&&A<B+C")
}

record(calc, "$(P)VSIZE_STATUS3"){
    field(DESC, "Status when DMM out and VBM in")
    field(INPA, "$(P)VSIZE CP")
    # SLT01 Z pos
    field(INPB, "$(SLT01Z)")
    # VBM Z pos
    field(INPC, "$(VBMZ)")
    # VBM length
    field(INPD, "1050")
    field(INPE, "MCTVBM01:PITCH.RBV CP")
    field(INPF, "0.001")
    field(INPG, "0.01")
    field(INPH, "(B/C)*D*E*F")
    field(CALC, "A>0&&A<H+G")
}

record(calcout, "$(P)VSIZE_STATUS_CALC"){
    field(DESC, "Select calc based on VBM and DMM status")
    field(INPA, "MCTMONO01:IN_SERVICE CP")
    field(INPB, "MCTVBM01:IN_SERVICE CP")
    field(INPC, "$(P)VSIZE_STATUS1 CP")
    field(INPD, "$(P)VSIZE_STATUS2 CP")
    field(INPE, "$(P)VSIZE_STATUS3 CP")
    field(CALC, "!(A||B)?C:(A?D:E)")
    field(OUT,  "$(P)VSIZE_STATUS PP")
}

record(bi, "$(P)VSIZE_STATUS") {
    field(DESC, "X gap status based on DMM and VBM")
    field(ZNAM, "Not in pos.")
    field(ZSV,  "MINOR")
    field(ONAM, "In posn.")
    field(OSV,  "NO_ALARM")
}

record(calc, "$(P)V_ACCEPT") {
    field(DESC, "Vertical acceptance")
    field(EGU,  "mrad")
    field(PREC, "3")
    field(INPA, "$(P)Z")
    field(INPB, "$(P)VSIZE CP")
    field(CALC, "B/A*1000")
    field(PINI, "YES")
}

record(calc, "$(P)V_ACCEPT_RATIO") {
    field(DESC, "Vert. acceptance rel. to MSK01")
    field(EGU,  "%")
    field(PREC, "1")
    field(INPA, "MCTMSK01:VSIZE CP")
    field(INPB, "$(P)V_ACCEPT CP")
    field(CALC, "B/A*100")
    field(LOW,  "90")
    field(LSV,  "MINOR")
    field(HIGH, "102")
    field(HSV,  "MINOR")
    field(PINI, "YES")
}
