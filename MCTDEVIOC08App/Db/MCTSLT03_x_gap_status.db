record(calc, "$(P)HSIZE_TARGET1") {
    field(DESC, "Tgt gap")
    field(INPA, "MCTSLT02:HSIZE CP")
    field(INPB, "$(SLT02Z)")
    field(INPC, "$(SLT03Z)")
    field(CALC, "A*(C/B)")
}

record(calc, "$(P)HSIZE_STATUS1"){
    field(DESC, "Status if VBM out")
    field(INPA, "$(P)HSIZE CP")
    field(INPB, "$(P)HSIZE_TARGET1 CP")
    field(INPC, "3.0")
    field(INPD, "0.0")
    field(CALC, "A>D&&A<B+C")

    info(autosaveFields, "C")
}

record(calcout, "$(P)HSIZE_CALC"){
    field(DESC, "Select calc based on VBM and DMM status")
    field(INPC, "$(P)HSIZE_STATUS1 CP")
    field(CALC, "C")
    field(OUT,  "$(P)HSIZE_STATUS PP")
}

record(bi, "$(P)HSIZE_STATUS") {
    field(DESC, "X gap status based on VBM")
    field(ZNAM, "Not in pos.")
    field(ZSV,  "MINOR")
    field(ONAM, "In posn.")
    field(OSV,  "NO_ALARM")
}
