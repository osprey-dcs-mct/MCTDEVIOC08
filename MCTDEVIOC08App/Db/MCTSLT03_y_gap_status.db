record(calc, "$(P)VSIZE_TARGET1") {
    field(DESC, "Tgt gap when VBM out")
    field(INPA, "MCTSLT02:VSIZE CPP")
    field(INPB, "$(SLT02Z)")
    field(INPC, "$(SLT03Z)")
    field(CALC, "A*(C/B)")
}

record(calc, "$(P)VSIZE_STATUS1"){
    field(DESC, "Status if VBM out")
    field(INPA, "$(P)VSIZE CP")
    field(INPB, "$(P)VSIZE_TARGET1 CP")
    field(INPC, "22.0")
    field(CALC, "A>0&&A<B+C")

    info(autosaveFields, "C")
}

record(calcout, "$(P)VSIZE_STATUS_CALC"){
    field(DESC, "Select calc based on VBM status")
    field(INPC, "$(P)VSIZE_STATUS1 CP")
    field(CALC, "C")
    field(OUT,  "$(P)VSIZE_STATUS PP")
}

record(bi, "$(P)VSIZE_STATUS") {
    field(DESC, "X gap status based on VBM")
    field(ZNAM, "Not in pos.")
    field(ZSV,  "MINOR")
    field(ONAM, "In posn.")
    field(OSV,  "NO_ALARM")
}
