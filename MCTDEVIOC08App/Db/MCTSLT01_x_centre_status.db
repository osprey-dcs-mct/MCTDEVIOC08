record(calc, "$(P)X_CENTRE") {
    field(DESC, "Calculated centre")
    field(INPA, "MCTSLT01MOT01.RBV CPP")
    field(INPB, "MCTSLT01MOT02.RBV CPP")
    field(CALC, "(A+B)/2")
}

record(ai, "$(P)X_CENTRE_TARGET1") {
    field(DESC, "Tgt centre when DMM and VBM are out")
    field(VAL,  "0.0")

    info(autosaveFields, "VAL")
}

record(calc, "$(P)X_CENTRE_STATUS1"){
    field(DESC, "Status if DMM and VBM are out")
    field(INPA, "$(P)X_CENTRE CP")
    field(INPB, "$(P)X_CENTRE_TARGET1 CP")
    field(INPC, "0.1")
    field(CALC, "ABS(A-B)<C")
}

record(ai, "$(P)X_CENTRE_TARGET2") {
    field(DESC, "Tgt centre when DMM is in")
    field(VAL,  "0.0")

    info(autosaveFields, "VAL")
}

record(calc, "$(P)X_CENTRE_STATUS2"){
    field(DESC, "Status if DMM is in")
    field(INPA, "$(P)X_CENTRE CP")
    field(INPB, "$(P)X_CENTRE_TARGET2 CP")
    field(INPC, "0.2")
    field(CALC, "ABS(A-B)<C")
}

record(ai, "$(P)X_CENTRE_TARGET3") {
    field(DESC, "Tgt centre when DMM out and VBM in")
    field(VAL,  "0.0")

    info(autosaveFields, "VAL")
}

record(calc, "$(P)X_CENTRE_STATUS3"){
    field(DESC, "Status when DMM out and VBM in")
    field(INPA, "$(P)X_CENTRE CP")
    field(INPB, "$(P)X_CENTRE_TARGET3 CP")
    field(INPC, "0.1")
    field(CALC, "ABS(A-B)<C")
}

record(calcout, "$(P)X_CENTRE_CALC"){
    field(DESC, "Select calc based on VBM and DMM status")
    field(PINI, "YES")
    field(INPA, "MCTMONO01:IN_SERVICE CP")
    field(INPB, "MCTVBM01:IN_SERVICE CP")
    field(INPC, "$(P)X_CENTRE_STATUS1 CP")
    field(INPD, "$(P)X_CENTRE_STATUS2 CP")
    field(INPE, "$(P)X_CENTRE_STATUS3 CP")
    field(CALC, "!(A||B)?C:(A?D:E)")
    field(OUT,  "$(P)X_CENTRE_STATUS PP")
}

record(bi, "$(P)X_CENTRE_STATUS") {
    field(DESC, "X centre status based on DMM and VBM")
    field(ZNAM, "Not in pos.")
    field(ZSV,  "MINOR")
    field(ONAM, "In posn.")
    field(OSV,  "NO_ALARM")
}
